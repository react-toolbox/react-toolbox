    "jest": "^20.0.1",
    "lerna": "^2.0.0-rc.4",
    "lint-staged": "^3.4.1",
    "postcss-cssnext": "^2.10.0",
    "postcss-each": "^0.9.3",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-mixins": "^6.0.0",
    "postcss-reporter": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.1",
    "prop-types": "^15.5.7",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
