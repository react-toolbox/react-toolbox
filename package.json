    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.6",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "roots": [
      "<rootDir>/packages/react-toolbox",
      "<rootDir>/packages/react-toolbox-core",
      "<rootDir>/packages/react-toolbox-css"
    ],
    "modulePathIgnorePatterns": [
      "packages/.*/lib"
    ],
    "testPathIgnorePatterns": [
      "lib"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "(\\.css$)|(normalize.css/normalize)|(^exports-loader)": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js)": "<rootDir>/transformers/babel.js",
      "^.+\\.(ts|tsx)$": "<rootDir>/transformers/typescript.js"
    }
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.js": [
      "yarn run prettier",
      "git add"
    ]
  }
}
